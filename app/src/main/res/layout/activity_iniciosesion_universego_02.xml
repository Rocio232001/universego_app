<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_inicio">

    <LinearLayout
        android:id="@+id/ParteVisualRegistro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logochico"
            android:layout_width="166dp"
            android:layout_height="46dp"
            android:translationX="425px"
            android:translationY="2300px"
            app:srcCompat="@drawable/universego_logochiquito" />

        <ImageView
            android:id="@+id/img_iniciosesiontitulo"
            android:layout_width="290dp"
            android:layout_height="35dp"
            android:translationX="190px"
            android:translationY="350px"
            app:srcCompat="@drawable/txt_iniciarsesion" />

        <ImageView
            android:id="@+id/img_transparente"
            android:layout_width="308dp"
            android:layout_height="81dp"
            android:translationX="180px"
            android:translationY="400px"
            app:srcCompat="@drawable/transparente_txt01" />

        <ImageView
            android:id="@+id/img_transparente02"
            android:layout_width="308dp"
            android:layout_height="84dp"
            android:translationX="180px"
            android:translationY="350px"
            app:srcCompat="@drawable/transparente_txt01" />

        <ImageButton
            android:id="@+id/btn_iniciarsesion"
            android:layout_width="1225px"
            android:layout_height="270px"
            android:contentDescription="@string/app_name"
            android:translationX="110px"
            android:translationY="400px"
            app:srcCompat="@drawable/iniciarclick" />

        <ImageButton
            android:id="@+id/btn_volveratrasinicio"
            android:layout_width="1225px"
            android:layout_height="270px"
            android:contentDescription="@string/app_name"
            android:translationX="110px"
            android:translationY="430px"
            app:srcCompat="@drawable/volveratrasnuevo" />

        <EditText
            android:id="@+id/colocarmail_inicio"
            android:layout_width="316dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Corre Electrónico"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:textColorHint="#FFFFFF"
            android:translationX="190px"
            android:translationY="-650px" />

        <EditText
            android:id="@+id/colocarpassword_inicio"
            android:layout_width="316dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textColorHint="#FFFFFF"
            android:translationX="190px"
            android:translationY="-570px" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>