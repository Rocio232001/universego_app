<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-500dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/info_size"
            android:contentDescription="@string/app_name"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/mercurionombre"
                android:layout_width="1300px"
                android:layout_height="wrap_content"
                android:translationX="70px"
                android:translationY="1150px"
                app:srcCompat="@drawable/mercurio_presentacion" />

            <ImageView
                android:id="@+id/caracteristicastitulo"
                android:layout_width="700px"
                android:layout_height="wrap_content"
                android:translationX="90px"
                android:translationY="300px"
                app:srcCompat="@drawable/generalestexto" />

            <ImageView
                android:id="@+id/rectanguloinfo"
                android:layout_width="1300px"
                android:layout_height="wrap_content"
                android:translationX="70px"
                android:translationY="-1000px"
                app:srcCompat="@drawable/rect_caracteristicasg" />

            <ImageView
                android:id="@+id/diametroinfo"
                android:layout_width="1200px"
                android:layout_height="wrap_content"
                android:translationX="120px"
                android:translationY="-3840px"
                app:srcCompat="@drawable/diametroinfo" />

            <ImageView
                android:id="@+id/mercuriofoto01"
                android:layout_width="700px"
                android:layout_height="wrap_content"
                android:translationX="570px"
                android:translationY="-4950px"
                app:srcCompat="@drawable/mercuriofoto01" />

            <ImageView
                android:id="@+id/rectanguloinfolargo"
                android:layout_width="1400px"
                android:layout_height="wrap_content"
                android:translationX="30px"
                android:translationY="-7300px"
                app:srcCompat="@drawable/rect_estructurainfo" />

            <ImageView
                android:id="@+id/estructuratitulo"
                android:layout_width="500px"
                android:layout_height="wrap_content"
                android:translationX="80px"
                android:translationY="-11750px"
                app:srcCompat="@drawable/estructuratitulo" />

            <ImageView
                android:id="@+id/infoestructura"
                android:layout_width="1300px"
                android:layout_height="wrap_content"
                android:translationX="85px"
                android:translationY="-12990px"
                app:srcCompat="@drawable/informacionestructura" />

            <ImageView
                android:id="@+id/mercuriofoto03"
                android:layout_width="1300px"
                android:layout_height="wrap_content"
                android:translationX="80px"
                android:translationY="-15000px"
                app:srcCompat="@drawable/mercuriofoto02" />

            <ImageButton
                android:id="@+id/btn_volver"
                android:layout_width="355dp"
                android:layout_height="87dp"
                android:contentDescription="@string/app_name"
                android:translationX="95px"
                android:translationY="-15800px"
                app:srcCompat="@drawable/volveratrasnuevo" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>