<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_inicio">

    <LinearLayout
        android:id="@+id/ParteVisualRegistro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logochico"
            android:layout_width="166dp"
            android:layout_height="46dp"
            android:translationX="400px"
            android:translationY="2250px"
            app:srcCompat="@drawable/universego_logochiquito" />

        <ImageView
            android:id="@+id/img_registrotitulo"
            android:layout_width="320dp"
            android:layout_height="35dp"
            android:translationX="160px"
            android:translationY="380px"
            app:srcCompat="@drawable/txt_registrodeusuario" />

        <ImageView
            android:id="@+id/img_transparente"
            android:layout_width="308dp"
            android:layout_height="81dp"
            android:translationX="180px"
            android:translationY="400px"
            app:srcCompat="@drawable/transparente_txt01" />

        <ImageView
            android:id="@+id/img_transparente02"
            android:layout_width="308dp"
            android:layout_height="84dp"
            android:translationX="185px"
            android:translationY="350px"
            app:srcCompat="@drawable/transparente_txt01" />

        <EditText
            android:id="@+id/registrocorreo"
            android:layout_width="316dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Correo electrónico"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:translationX="190px"
            android:translationY="-110px" />

        <EditText
            android:id="@+id/passwordcorreo"
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFDFD"
            android:translationX="190px"
            android:translationY="-55px" />

        <ImageButton
            android:id="@+id/btn_registrarse"
            android:layout_width="355dp"
            android:layout_height="87dp"
            android:contentDescription="@string/app_name"
            android:translationX="95px"
            android:translationY="60px"
            app:srcCompat="@drawable/registrarseclick" />

        <ImageButton
            android:id="@+id/iniciarsesion_"
            android:layout_width="355dp"
            android:layout_height="87dp"
            android:contentDescription="@string/app_name"
            android:translationX="95px"
            android:translationY="65px"
            app:srcCompat="@drawable/iniciarclick" />

        <ImageButton
            android:id="@+id/btn_volveratrasregistro"
            android:layout_width="355dp"
            android:layout_height="87dp"
            android:contentDescription="@string/app_name"
            android:translationX="95px"
            android:translationY="65px"
            app:srcCompat="@drawable/salirclick" />

        <TextView
            android:id="@+id/UpdateState"
            android:layout_width="500px"
            android:layout_height="wrap_content"
            android:background="#673AB7"
            android:backgroundTint="#673AB7"
            android:fontFamily="sans-serif-medium"
            android:text="Estado del usuario"
            android:textColor="#FFFFFF"
            android:translationX="450px"
            android:translationY="-2000px" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>